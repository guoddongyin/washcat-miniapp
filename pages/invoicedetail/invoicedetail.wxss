/*弹窗  */

/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
}  
  
/*content*/  
.drawer_box {  
  width: 540rpx; 
  height: 330rpx; 
  overflow: hidden;  
  position: fixed;  
  top: 50%;  
  left: 0;  
  z-index: 1001;  
  background: white;  
  margin: -200rpx 0rpx 0rpx 110rpx;  
  border-radius: 20rpx;  
}  
  
.drawer_title{  
  padding:30rpx;  
  font: 31rpx "microsoft yahei";  
  text-align:left;
  color:#000;
}  
.drawer_content {  
  height: 100rpx;  
  overflow-y: scroll; /*超出父盒子高度可滚动*/  
  text-align: center
}  

