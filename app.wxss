  justify-content: space-around
}
.row {
    display: flex;
    flex-direction: row;
}

.row-1 {
    width: 16.67%;
}

.row-2 {
    width: 33.33%;
}

.row-3 {
    width: 50%;
}

.row-4 {
    width: 66.67%;
}

.row-5 {
    width: 83.33%;
}

.row-6 {
    width: 100%;
}

.row-offset-1 {
    margin-left: 16.67%;
}

.row-offset-2 {
    margin-left: 33.33%;
}

.row-offset-3 {
    margin-left: 50%;
}

.row-offset-4 {
    margin-left: 66.67%;
}

.row-offset-5 {
    margin-left: 83.33%;
}

.row-1, .row-2, .row-3, .row-4, .row-5, .row-6 {
    height: 100%;
}

.line {
    display: flex;
}

/* 1 点 */
.box1 {
    justify-content: center;
    align-items: center;
}

/* 2 点 */
.box2 {
    justify-content: space-between;
}

.box2 .dot2 {
    align-self: flex-end;
}

/* 3 点 */
.box3 {
    justify-content: space-between;
}

.box3 .dot2 {
    align-self: center;
}

.box3 .dot3 {
    align-self: flex-end;
}

/* 4 点 */
.box4 {
    flex-direction: column;
    justify-content: space-between;
}

.box4 .line {
    justify-content: space-between;
}

/* 5 点 */
.box5 {
    flex-direction: column;
    justify-content: space-between;
}

.box5 .line1, .box5 .line3 {
    justify-content: space-between;
}

.box5 .line2 {
    justify-content: center;
}

/* 6 点 */
.box6 {
    flex-direction: column;
    justify-content: space-between;
}

.box6 .line {
    justify-content: space-between;
}
